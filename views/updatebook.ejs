            <label>Book title</label>
            <input type="text" class="form-control" name="title" value='<%=updateBook.title%>'>
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea type="text" class="form-control" name="description"><%=updateBook.description%></textarea>
        </div>
        <input type="hidden" name="<%=updateBook._id%>">
        <div class="form-group">
            <label>Author</label>
            <input type="text" class="form-control" name="author" value='<%=updateBook.author%>'>
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="text" class="form-control" name="price" value='<%=updateBook.price%>'>
        </div>

        
        <div class="form-group">
            <h6>Image</h6>
            <img src="/uploads/<%=updateBook.image%>" widh="100" height="100">
            <input type="hidden" name="oldImage" value="<%=updateBook.image%>">
            <input type="file" accept=".jpg,.png,.jpeg" class="form-control" name="image" value=<%=updateBook.image%>>
        </div>

      

        <button class="btn btn-primary" type="submit">Update</button>
      </form>

