 <div class="container">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Author</th>
        <th scope="col">Price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for (let book of mybooks) { %>
      <tr>
        <th><img height="75" width="75" src="uploads/<%=book.image%>"></th>
        <td><%=book.title%></td>
        <td><%=book.author%></td>
        <td><%=book.price%> $</td>
        <td>
          
          <a class="btn btn-primary" href="/mybooks/update/<%=book._id%>">Update</a>

          <!-- <a class="btn btn-danger" href="/mybooks/delete/<%=book._id%>">Delete</a> -->
          <form action="/mybooks/delete/<%=book._id%>" method="post">
            <input type="hidden" name="bookId" value="<%=book._id%>">
            <button class="btn btn-danger" type="submit">Delete</button>
          </form>

      </tr>
      <% } %>
    </tbody>
  </table>

  <% if (Smsg) {%>
    <div class="alert alert-success">
      <%= Smsg %>
    </div>  
  <%}%>

  <% if (Emsg) {%>
      <div class="alert alert-danger">
        <%= Emsg %>
      </div>  
  <%}%>

  
 </div>









